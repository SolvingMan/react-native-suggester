{
  "name": "react-native-suggester",
  "version": "0.0.1",
  "description": "React-Native package to decorate TextInput and get suggestions with good UX",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/xcarpentier/react-native-suggester.git"
  },
  "keywords": [
    "React-Native",
    "TextInput",
    "autocompletion"
  ],
  "main": "node_modules/expo/AppEntry.js",
  "types": "lib/index.d.ts",
  "author": "Xavier Carpentier <xcapetir@gmail.com> (https://xaviercarpentier.com/)",
  "license": "MIT",
  "private": false,
  "files": [
    "lib/**/*"
  ],
  "devDependencies": {
    "@babel/core": "^7.1.2",
    "@babel/preset-typescript": "^7.1.0",
    "@types/react": "^16.7.17",
    "@types/react-native": "^0.57.19",
    "babel-core": "^7.0.0-bridge.0",
    "babel-preset-expo": "^5.0.0",
    "prettier": "1.15.3",
    "tslint": "5.12.0",
    "tslint-config-prettier": "1.17.0",
    "typescript": "3.2.2",
    "json": "^9.0.6",
    "expo": "^32.0.0",
    "react": "16.5.0",
    "react-native": "https://github.com/expo/react-native/archive/sdk-32.0.0.tar.gz"
  },
  "dependencies": {
    "fuse.js": "3.3.0",
    "prop-types": "15.6.2"
  },
  "peerDependencies": {
    "react": "*",
    "react-native": "*"
  },
  "scripts": {
    "dev": "json -I -f package.json -e 'this.main=\"node_modules/expo/AppEntry.js\"' && expo r -c",
    "build": "rm -rf lib/ && tsc",
    "lint": "tslint -p tsconfig.json",
    "prepublish": "yarn lint && yarn build && json -I -f package.json -e 'this.main=\"lib/index.js\"'",
    "postpublish": "json -I -f package.json -e 'this.main=\"node_modules/expo/AppEntry.js\"'"
  }
}
